{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": "src",
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        
    },
    "include": ["src", "typing.d.ts"],
    "exclude": ["node_modules"]
}